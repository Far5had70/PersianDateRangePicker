<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.waspar.persiandatepicker.wheel.WheelPickerView
            android:id="@+id/wheelPickerYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:itemTextColorr="@color/white_smoke"
            app:itemTextColorrSelect="@color/white"
            app:itemTextSize="20dp" />

        <com.waspar.persiandatepicker.wheel.WheelPickerView
            android:id="@+id/wheelPickerMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:itemTextColorr="@color/white_smoke"
            app:itemTextColorrSelect="@color/white"
            app:itemTextSize="20dp" />

        <com.waspar.persiandatepicker.wheel.WheelPickerView
            android:id="@+id/wheelPickerDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:itemTextColorr="@color/white_smoke"
            app:itemTextColorrSelect="@color/white"
            app:itemTextSize="20dp" />

    </LinearLayout>

</RelativeLayout>